@model IEnumerable<Paving.Models.Category>
<div class="container">
    <div class="row p-4">
        <div class="col-6">
            <h1 class="text-primary">Category</h1>
        </div>
        <div class="col-6  text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create Category List</a>
        </div>
    </div>
</div>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Category
            </th>
            <th>
                Display Order
            </th>
            <th class="text-center">
                Action
            </th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td class="text-center">
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary m-1"><i class="fas fa-edit"></i></a>
                        <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger m-1"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No Category Exists</p>
}




