@model IEnumerable<Paving.Models.ApplicationType>

<div class="container">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">ApplicationType</h2>
        </div>
        <div class="col-6  text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Create Application List</a>
        </div>
    </div>
</div>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>          
            <th width="70%">
                Name
            </th>
            <th class="text-center" width="30%">
                Action
            </th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td class="text-center">
                    <div>
                        <a asp-controller="ApplicationType" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary m-1"><i class="fas fa-edit"></i></a>
                        <a asp-controller="ApplicationType" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger m-1"><i class="fas fa-trash-alt"></i></a>
                    </div>

                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No Application Type Exists</p>
}




