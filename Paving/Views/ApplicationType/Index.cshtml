@model IEnumerable<Paving.Models.ApplicationType>

<div class="container">
    <div class="row p-4">
        <div class="col-6">
            <h1 class="text-primary">ApplicationType</h1>
        </div>
        <div class="col-6  text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">Create Application List</a>
        </div>
    </div>
</div>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
            </tr>
        }
    </table>
}
else
{
    <p>No Application Type Exists</p>
}




