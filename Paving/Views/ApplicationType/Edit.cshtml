@model Paving.Models.ApplicationType

<form method="post">

    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info"> Edit Application Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">                   
                    <div class="offset-4 col-8 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" asp-action="Update" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-left"></i> &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

